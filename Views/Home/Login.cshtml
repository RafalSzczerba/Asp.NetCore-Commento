@using Commento.Enums
<h4>Introduce you login data</h4>
<div class="col-auto">
    <form class="row" method="post">
        <div class="col-auto">
            <label class="col-form-label">Email:</label>
        </div>
        <div class="col-auto">
            <input type="text" value="" name="Email" class="form-control" placeholder="">
        </div>
        <div class="col-auto">
            <label class="col-form-label">User Name:</label>
        </div>
        <div class="col-auto">
            <input type="text" value="" name="UserName" class="form-control" placeholder="">
        </div>
         <div class="form-group mt-2">
                <input type="submit" value="Login" class="btn btn-primary" /> <a class="btn btn-danger" asp-action="Index">Back</a>
         </div>
    </form>
</div>

    @{
    if (ViewBag.loginStatus == LoginStatus.WrongLoginData)
    {

        <script type="text/javascript">
            alert("Wrong input data, you will be redirect to home page, try again");
            window.location.href = "Index";
        </script>
        ;   
    }
}

